# ========================================
# SECRETS TEMPLATE
# ========================================
# This file shows the structure for storing credentials
#
# IMPORTANT SECURITY NOTES:
# 1. NEVER commit actual secrets to Git
# 2. Copy this file and rename to appropriate location
# 3. For ESP32: Edit firmware .ino files directly (not tracked if configured)
# 4. For Streamlit Cloud: Add via dashboard settings (not in repo)
# ========================================

# ========================================
# ESP32 FIRMWARE CONFIGURATION
# ========================================
# Edit these values in:
# - firmware/esp32_main/esp32_main.ino
# - firmware/esp32_cam/esp32_cam.ino

WiFi_SSID=Your_WiFi_Name
WiFi_PASSWORD=Your_WiFi_Password

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
FIREBASE_USER_EMAIL=your-email@example.com
FIREBASE_USER_PASSWORD=your-firebase-password

# ImgBB API (for ESP32-CAM only)
IMGBB_API_KEY=your_imgbb_api_key_here

# Google Teachable Machine (for ESP32-CAM only)
TEACHABLE_MACHINE_URL=https://teachablemachine.withgoogle.com/models/YOUR_MODEL_ID/

# ========================================
# STREAMLIT CLOUD CONFIGURATION
# ========================================
# Add these via Streamlit Cloud dashboard:
# Settings → Secrets → Edit
#
# Format: TOML
# Paste the Firebase service account JSON in this format:

[firebase]
type = "service_account"
project_id = "your-project-id"
private_key_id = "xxxxxxxxxxxxxxxxxxxxx"
private_key = "-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
client_email = "firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com"
client_id = "xxxxxxxxxxxxxxxxxxxx"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project-id.iam.gserviceaccount.com"

# ========================================
# OBTAINING CREDENTIALS
# ========================================

# 1. FIREBASE
# - Console: https://console.firebase.google.com
# - Go to Project Settings → Service Accounts
# - Click "Generate new private key"
# - Download JSON file (contains all Firebase credentials)

# 2. IMGBB
# - Sign up: https://imgbb.com
# - Get API key: https://api.imgbb.com
# - Free tier: unlimited uploads

# 3. TEACHABLE MACHINE
# - Train model: https://teachablemachine.withgoogle.com
# - Export → Upload model → Copy shareable link
# - Model URL format: https://teachablemachine.withgoogle.com/models/[ID]/

# 4. WIFI
# - Use 2.4GHz network (ESP32 doesn't support 5GHz)
# - Ensure WPA2-PSK security (most compatible)
# - Check SSID has no special characters

# ========================================
# SECURITY BEST PRACTICES
# ========================================

# ✓ DO:
# - Use environment-specific credentials
# - Rotate API keys regularly
# - Use Firebase security rules
# - Enable 2FA on all accounts
# - Use strong, unique passwords

# ✗ DON'T:
# - Commit secrets to Git
# - Share credentials publicly
# - Use same password across services
# - Hardcode credentials in public code
# - Disable security features

# ========================================
# LOCAL DEVELOPMENT (Optional)
# ========================================
# For local Streamlit testing, create:
# .streamlit/secrets.toml
# (This file is already in .gitignore)

# Copy the [firebase] section above into that file
# Then run: streamlit run streamlit_app.py
